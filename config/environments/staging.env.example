# Staging Environment Configuration
# Copy to .env.staging and fill in your values

# API Configuration
API_BASE_URL=https://staging-api.fueki.io
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Blockchain Networks
BITCOIN_NETWORK=testnet
ETHEREUM_NETWORK=sepolia
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# TSS Configuration
TSS_THRESHOLD=2
TSS_TOTAL_SHARES=3
TSS_SERVER_URL=https://staging-tss.fueki.io

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_ADVANCED_SETTINGS=true
ENABLE_DEBUG_MODE=false
ENABLE_TEST_NETWORKS=true

# Security
SESSION_TIMEOUT=1800000
MAX_LOGIN_ATTEMPTS=5
ENCRYPTION_ALGORITHM=aes-256-gcm

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://staging-analytics.fueki.io

# Logging
LOG_LEVEL=info
LOG_TO_CONSOLE=false
LOG_TO_FILE=true

# App Configuration
APP_VERSION=1.0.0
MIN_SUPPORTED_VERSION=1.0.0
FORCE_UPDATE=false

# External Services
PRICE_FEED_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API=https://api.exchangerate-api.com/v4/latest

# Push Notifications
FCM_SERVER_KEY=your_staging_fcm_key
APNS_KEY_ID=your_staging_apns_key
APNS_TEAM_ID=your_team_id

# Deep Linking
APP_SCHEME=fueki
UNIVERSAL_LINK_DOMAIN=staging.fueki.io

# Development Tools
ENABLE_REDUX_DEVTOOLS=false
ENABLE_REACTOTRON=false
STORYBOOK_ENABLED=false
