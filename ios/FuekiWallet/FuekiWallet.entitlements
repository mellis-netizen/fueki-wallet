<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Keychain Access for Secure Storage -->
	<key>keychain-access-groups</key>
	<array>
		<string>$(AppIdentifierPrefix)com.fueki.wallet</string>
		<string>$(AppIdentifierPrefix)com.fueki.wallet.dev</string>
		<string>$(AppIdentifierPrefix)com.fueki.wallet.staging</string>
	</array>

	<!-- App Groups for Data Sharing (Extensions) -->
	<key>com.apple.security.application-groups</key>
	<array>
		<string>group.com.fueki.wallet</string>
	</array>

	<!-- Associated Domains for Universal Links -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:fueki.io</string>
		<string>applinks:www.fueki.io</string>
		<string>applinks:staging.fueki.io</string>
		<string>applinks:dev.fueki.io</string>
	</array>

	<!-- Push Notifications -->
	<key>aps-environment</key>
	<string>development</string>

	<!-- NFC Tag Reading (for potential hardware wallet integration) -->
	<key>com.apple.developer.nfc.readersession.formats</key>
	<array>
		<string>NDEF</string>
		<string>TAG</string>
	</array>

	<!-- Background Modes -->
	<key>com.apple.developer.usernotifications.time-sensitive</key>
	<true/>

	<!-- Data Protection -->
	<key>com.apple.developer.default-data-protection</key>
	<string>NSFileProtectionComplete</string>

	<!-- AutoFill Credential Provider (for password management) -->
	<key>com.apple.developer.authentication-services.autofill-credential-provider</key>
	<true/>

	<!-- Network Extensions (for VPN if needed) -->
	<key>com.apple.developer.networking.networkextension</key>
	<array>
		<string>packet-tunnel-provider</string>
		<string>app-proxy-provider</string>
	</array>

	<!-- CloudKit (for backup/sync) -->
	<key>com.apple.developer.icloud-container-identifiers</key>
	<array>
		<string>iCloud.com.fueki.wallet</string>
	</array>
	<key>com.apple.developer.icloud-services</key>
	<array>
		<string>CloudKit</string>
		<string>CloudDocuments</string>
	</array>

	<!-- Sign in with Apple -->
	<key>com.apple.developer.applesignin</key>
	<array>
		<string>Default</string>
	</array>

	<!-- Siri -->
	<key>com.apple.developer.siri</key>
	<true/>

	<!-- Wallet (for Apple Pay integration) -->
	<key>com.apple.developer.in-app-payments</key>
	<array>
		<string>merchant.com.fueki.wallet</string>
	</array>
</dict>
</plist>
