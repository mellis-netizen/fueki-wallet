<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Export method: app-store, ad-hoc, enterprise, development -->
    <key>method</key>
    <string>app-store</string>

    <!-- Team ID from Apple Developer Portal -->
    <key>teamID</key>
    <string>YOUR_TEAM_ID</string>

    <!-- Upload bitcode (deprecated in Xcode 14+) -->
    <key>uploadBitcode</key>
    <false/>

    <!-- Compile bitcode -->
    <key>compileBitcode</key>
    <false/>

    <!-- Upload symbols for crash reporting -->
    <key>uploadSymbols</key>
    <true/>

    <!-- Signing style: manual or automatic -->
    <key>signingStyle</key>
    <string>manual</string>

    <!-- Strip Swift symbols -->
    <key>stripSwiftSymbols</key>
    <true/>

    <!-- App thinning: <none>, <thin-for-all-variants> -->
    <key>thinning</key>
    <string>&lt;none&gt;</string>

    <!-- Provisioning profiles mapping -->
    <key>provisioningProfiles</key>
    <dict>
        <key>com.fueki.wallet</key>
        <string>match AppStore com.fueki.wallet</string>
        <key>com.fueki.wallet.staging</key>
        <string>match AppStore com.fueki.wallet.staging</string>
        <key>com.fueki.wallet.dev</key>
        <string>match Development com.fueki.wallet.dev</string>
    </dict>

    <!-- Signing certificate -->
    <key>signingCertificate</key>
    <string>Apple Distribution</string>

    <!-- Installer signing certificate (for macOS) -->
    <!-- <key>installerSigningCertificate</key>
    <string>3rd Party Mac Developer Installer</string> -->

    <!-- Destination for export -->
    <key>destination</key>
    <string>export</string>

    <!-- Generate app size report -->
    <key>generateAppStoreInformation</key>
    <true/>

    <!-- Include manifest for enterprise distribution -->
    <!-- <key>manifest</key>
    <dict>
        <key>appURL</key>
        <string>https://example.com/app.ipa</string>
        <key>displayImageURL</key>
        <string>https://example.com/display.png</string>
        <key>fullSizeImageURL</key>
        <string>https://example.com/fullsize.png</string>
    </dict> -->
</dict>
</plist>
