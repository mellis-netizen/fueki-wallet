# Code signing configuration for match

# Git repository URL for storing certificates and profiles
git_url("https://github.com/fueki/certificates")

# Storage mode (git, google_cloud, or s3)
storage_mode("git")

# App identifier
app_identifier(["com.fueki.wallet"])

# Type of provisioning profile
# Valid values: development, adhoc, appstore, enterprise
type("development")

# Username for Apple Developer Portal
username("developer@fueki.io")

# Team ID from Apple Developer Portal
team_id("TEAM_ID")

# Keychain configuration
keychain_name("fastlane_tmp_keychain")
keychain_password(ENV["MATCH_KEYCHAIN_PASSWORD"] || "default_keychain_password")

# Additional options
readonly(false)
force_for_new_devices(true)
skip_confirmation(true)
verbose(true)

