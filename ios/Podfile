# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

# Inhibit all warnings from CocoaPods dependencies
inhibit_all_warnings!

# Use modular headers for compatibility
use_modular_headers!

target 'FuekiWallet' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FuekiWallet

  # Security & Cryptography - Production Ready
  pod 'CryptoSwift', '~> 1.8.0'                    # Crypto primitives, hashing, encryption
  pod 'Alamofire', '~> 5.8.1'                      # HTTP networking

  # Big Integer Support - Production Ready
  pod 'BigInt', '~> 5.3.0'                         # Large number arithmetic for blockchain

  # Blockchain & Web3 - Ethereum Support
  pod 'web3swift', '~> 3.1.0'                      # Ethereum blockchain integration

  # Bitcoin Support - Production Ready
  # Note: BitcoinKit requires manual integration or SPM
  # pod 'BitcoinKit', '~> 1.1.0'                   # Bitcoin blockchain support

  # Solana Support - Production Ready
  # Note: Solana.Swift is best integrated via SPM
  # See Package.swift for SPM integration

  # Keychain & Secure Storage - Production Ready
  pod 'KeychainAccess', '~> 4.2.2'                 # Secure keychain wrapper (preferred over KeychainSwift)

  # Code Quality & Linting - Production Ready
  pod 'SwiftLint', '~> 0.54.0'                     # Swift code linter

  # QR Code Scanning - Production Ready
  pod 'SwiftQRScanner', '~> 2.0.0'                 # QR code scanning

  # UI Components - Production Ready
  pod 'SkeletonView', '~> 1.31.0'                  # Loading skeleton animations
  pod 'Lottie', '~> 4.4.0'                         # Animation framework

  # Networking & JSON - Production Ready
  pod 'SwiftyJSON', '~> 5.0.1'                     # JSON parsing helper

  # Reactive Programming
  # Combine is built-in to iOS 15+, no pod needed

  # Additional Security - Production Ready
  # Note: CryptoKit is built-in to iOS 15+, no pod needed

  # Analytics & Monitoring (optional - disabled for now)
  # pod 'Firebase/Analytics'
  # pod 'Firebase/Crashlytics'
  # pod 'Sentry', '~> 8.0'

  target 'FuekiWalletTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick', '~> 7.3.0'                        # BDD testing framework
    pod 'Nimble', '~> 13.0.0'                      # Matcher framework for Quick
    pod 'OHHTTPStubs/Swift', '~> 9.1.0'           # HTTP request stubbing for tests
  end

  target 'FuekiWalletUITests' do
    inherit! :search_paths
    # Pods for UI testing
  end

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # Enable hardened runtime for security
      config.build_settings['ENABLE_HARDENED_RUNTIME'] = 'YES'

      # Swift compilation mode
      config.build_settings['SWIFT_COMPILATION_MODE'] = 'wholemodule'

      # Optimization level
      if config.name == 'Debug'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
      else
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
      end
    end
  end
end
