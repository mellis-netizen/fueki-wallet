# Production Environment Configuration
# Copy to .env.production and fill in your values
# NEVER commit production secrets to version control

# API Configuration
API_BASE_URL=https://api.fueki.io
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Blockchain Networks
BITCOIN_NETWORK=mainnet
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# TSS Configuration
TSS_THRESHOLD=2
TSS_TOTAL_SHARES=3
TSS_SERVER_URL=https://tss.fueki.io

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_ADVANCED_SETTINGS=false
ENABLE_DEBUG_MODE=false
ENABLE_TEST_NETWORKS=false

# Security
SESSION_TIMEOUT=900000
MAX_LOGIN_ATTEMPTS=3
ENCRYPTION_ALGORITHM=aes-256-gcm

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.fueki.io

# Logging
LOG_LEVEL=error
LOG_TO_CONSOLE=false
LOG_TO_FILE=true

# App Configuration
APP_VERSION=1.0.0
MIN_SUPPORTED_VERSION=1.0.0
FORCE_UPDATE=false

# External Services
PRICE_FEED_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API=https://api.exchangerate-api.com/v4/latest

# Push Notifications
FCM_SERVER_KEY=your_production_fcm_key
APNS_KEY_ID=your_production_apns_key
APNS_TEAM_ID=your_team_id

# Deep Linking
APP_SCHEME=fueki
UNIVERSAL_LINK_DOMAIN=fueki.io

# Development Tools
ENABLE_REDUX_DEVTOOLS=false
ENABLE_REACTOTRON=false
STORYBOOK_ENABLED=false

# Monitoring and Error Tracking
SENTRY_DSN=your_sentry_dsn
ERROR_TRACKING_ENABLED=true

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000
